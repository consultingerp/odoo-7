<odoo>
    <data noupdate="0">
        <template id="student_showexamination">
            <t t-call="ghu_campus_style.campus_layout">
                <t t-set="title">
                    <t t-esc="object.display_name"/>
                </t>
                <t t-if="object.long_name" t-set="subtitle">
                    <t t-esc="object.long_name"/>
                </t>
                <div class="d-flex flex-column flex-sm-row flex-wrap mb-headings align-items-start align-items-sm-center">
                    <div class="flex mb-2 mb-sm-0">
                        <h1 class="h2">
                            <t t-esc="object.display_name"/>
                        </h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-body">
                                <!-- <h2><t t-esc="ex.question_title"/></h2> -->
                                <h2><t t-esc="request.env['ghu_custom_mba.assessment'].sudo().types[ex.type]"/></h2>
                                <h3>Task description</h3>
                                <t t-raw="ex.question"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                Use the following template for your work:<br/>
                                <a t-attf-href="/ghu_custom_mba/static/files/Analysis_Report_Homework-Examination-number_Student-ID.docx" t-if="ex.type == 'analysis' or ex.type == 'report' or ex.type == 'homework'">Template</a>
                                <a t-attf-href="/ghu_custom_mba/static/files/Essay_Examination-number_Student-ID.docx" t-if="ex.type == 'essay'">Template</a><br/>
                                You have to submit the finalized document at latest on <span t-field="ex.end_date" t-field-options='{"format": "dd/MM/yyyy"}'/> at midnight.
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>