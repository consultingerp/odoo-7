<odoo>
    <data noupdate="0">
        <template id="student_requestassessment">
            <t t-call="ghu_campus_style.campus_layout">
                <t t-set="title">
                    <t t-esc="object.display_name"/>
                </t>
                <t t-if="object.long_name" t-set="subtitle">
                    <t t-esc="object.long_name"/>
                </t>
                <div class="d-flex flex-column flex-sm-row flex-wrap mb-headings align-items-start align-items-sm-center">
                    <div class="flex mb-2 mb-sm-0">
                        <h1 class="h2">
                            <t t-esc="object.display_name"/>
                        </h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-body">
                                By clicking the button below you are requesting the assessment for this course.<br/>
                                You will immediately get access to the assessment questions.<br/>
                                Assignments must be submitted via campus by midnight on the 21st day after you got the questions.<br/> 
                                <a t-attf-href="/campus/course/create_assessment/{{ object.id }}" class="btn btn-success btn-block flex-column a-submit">
                                    Request assessment
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>