<odoo>
    <data noupdate="0">
        <template id="campus_layout" inherit_id="portal.frontend_layout">
            <xpath expr="//div[@id='wrapwrap']" position="attributes">
                <attribute name="t-attf-dir" add="#{request.env['res.lang'].search([('code', '=', request.env.lang)]).direction == 'rtl' and 'o_rtl' or 'ltr'}" separator=" "/>
            </xpath>
            <xpath expr="//div[@id='wrapwrap']/header/nav[hasclass('navbar')]" position="replace">
                <nav class="navbar navbar-expand-md navbar-light bg-light">
                    <div class="container">
                        <a href="/" class="navbar-brand logo">
                            <img t-att-src="'/logo.png?company=%s' % res_company.id" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                        </a>
                        <t t-if="request.env.user.partner_id.is_custom_mba_student or request.env.user.has_group('base.group_user')" t-call="ghu_campus_style.sidebar_student" />
                        <t t-if="request.env.user.partner_id.is_doctoral_student or request.env.user.has_group('base.group_user')" t-call="ghu_campus_style.sidebar_doctoral_student" />
                        <t t-if="request.env.user.partner_id.is_advisor or request.env.user.has_group('base.group_user')" t-call="ghu_campus_style.sidebar_doctoral_advisor" />
                        <t t-if="request.env.user.partner_id.is_custom_mba or request.env.user.has_group('base.group_user')" t-call="ghu_campus_style.sidebar_custom_mba" />
                        <t t-call="ghu_campus_style.sidebar_advisor" />
                        <ul class="nav navbar-nav ml-auto text-right">        
                            <li class="nav-item" t-ignore="true" t-if="not user_id._is_public()">
                                <a id="o_logout" class="item" t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </xpath>
            <xpath expr="//div[@id='wrapwrap']/main/t[@t-raw='0']" position="replace">
                <div id="wrap" class="o_portal_wrap">
                    <div class="container mb64">
                        <t t-raw='0'/>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="campus_assets" inherit_id="portal.assets_frontend" name="Campus Assets">
            <xpath expr="//link[last()]" position="after">
                <!-- Material Design Icons -->
                <link type="text/css" href="/ghu_campus_style/static/design/dist/assets/css/material-icons.css" rel="stylesheet" />
            </xpath>
        </template>
        <template id="preloader">
            <div class="preloader">
                <div class="sk-double-bounce">
                    <div class="sk-child sk-double-bounce1"></div>
                    <div class="sk-child sk-double-bounce2"></div>
                </div>
            </div>
        </template>
    </data>
</odoo>