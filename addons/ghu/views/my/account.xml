<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <template id="ghu_my_details" inherit_id="portal.portal_my_details">
           <xpath expr="//div[hasclass('o_portal_details')]/row" position="after">
               <div t-attf-class="form-group #{error.get('interest_id') and 'o_has_error' or ''} col-xl-6">
                   <label class="col-form-label" for="country_id">Country</label>
                   <select name="interest_id"
                           t-attf-class="form-control #{error.get('interest_id') and 'is-invalid' or ''}">
                       <option value="">Interests...</option>
                       <t t-foreach="interests or []" t-as="interest">
                           <option t-att-value="interest.id"
                                   t-att-selected="interest.id == int(country_id) if interest_id else interest.id == partner.interest_id.id">
                               <t t-esc="interest.name"/>
                           </option>
                       </t>
                   </select>
               </div>
           </xpath>
        </template>
    </data>
</odoo>