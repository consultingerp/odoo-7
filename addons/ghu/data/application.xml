        <record model="base.automation" id="ghu_doctoral_application_send_new_email">
            <field name="name">Send Doctoral Application Mails</field>
            <field name="model_id" ref="model_ghu_application"/>
            <field name="trigger">on_create</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code"><![CDATA[
tool = env["ghu.application"]
tool.on_creation(record)
]]></field>
        </record>
        <record model="base.automation" id="ghu_doctoral_application_send_application">
            <field name="name">Check if signed document is application</field>
            <field name="model_id" ref="sign.model_sign_request"/>
            <field name="trigger">on_write</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code"><![CDATA[
tool = env["ghu.application"]
tool.check_signature(record)
]]></field>
        </record>
        <record model="base.automation" id="ghu_doctoral_check_invoices">
            <field name="name">Check if paid invoice is application</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="trigger">on_write</field>
            <field name="type">ir.actions.server</field>
